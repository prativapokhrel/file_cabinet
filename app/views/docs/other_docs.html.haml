.wrapper_with_padding
  #docs

    - unless @docs.blank?
      - @docs.each do |doc|
        %a{ href: (url_for [doc]) }
          .doc
            %p.title= link_to doc.title, doc
            %p.date= time_ago_in_words(doc.created_at)
            %p.content= truncate(doc.content, length:50)
            %br
            %i.fa.fa-heart{:style => "padding-left: 140px;"} &nbsp; #{doc.like_count}
            
            %p.pull-right - by #{doc.user.email}
    - else
      .new-doc
        %h2 Create Doc!
        %p Start Creating Documents and Organizing your life!
        = link_to "Create Doc", new_doc_path, class: "button btn btn-lg btn-default"

