<div class="wrapper_with_padding">

  <h2>Log in</h2>

  <%= form_for resource, as: resource_name, url: session_path(resource_name) do |f| %>
    <div class="form-inputs">
      <div class="form-group">
        <%= f.label :email %>
        <%= f.email_field :email, required: false, autofocus: true, class: 'form-control' %>
      </div>
      <div class="form-group">

        <%= f.label :password %>

        <%= f.password_field :password, required: false, class: 'form-control' %>
      </div>

      <div class="form-group">
        <div class="col-sm-12">
          <div class="checkbox">
            <label>
              <%= f.check_box :remember_me %>
              Remember me
            </label>
          </div>
        </div>

      </div>
    </div>

    <div class="form-actions">
      <%= submit_tag "Log in", class: 'btn btn-default btn-flat' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>